@page "/Admin/Roles"
@model IdentityServerAspNetIdentity.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2><i class="fas fa-star"></i> Roles</h2>
            </div>

            @if (Model.Roles.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped" id="roles-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model.Roles)
                                {
                                    <tr>
                                        <td>@role.Name</td>
                                        <td>
                                            <a asp-page="/Admin/Roles/Edit" asp-route-roleId="@role.Id" class="button button-sm button-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No roles found.
                </div>
            }

            <div class="mt-3">
                <a asp-page="/Admin/Index" class="button button-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
