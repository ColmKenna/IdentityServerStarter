@page "/admin/clients/{id:int}/edit"
@model IdentityServerAspNetIdentity.Pages.Admin.Clients.EditModel
@{
    ViewData["Title"] = "Edit Client";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2><i class="fas fa-edit"></i> Edit Client</h2>
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form method="post">
                <div class="row">
                    <!-- Basic Information -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="fas fa-info-circle"></i> Basic Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Input.ClientId" class="form-label"></label>
                                    <input asp-for="Input.ClientId" class="form-control" />
                                    <span asp-validation-for="Input.ClientId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.ClientName" class="form-label"></label>
                                    <input asp-for="Input.ClientName" class="form-control" />
                                    <span asp-validation-for="Input.ClientName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Description" class="form-label"></label>
                                    <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.ClientUri" class="form-label"></label>
                                    <input asp-for="Input.ClientUri" class="form-control" />
                                    <span asp-validation-for="Input.ClientUri" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.LogoUri" class="form-label"></label>
                                    <input asp-for="Input.LogoUri" class="form-control" />
                                    <span asp-validation-for="Input.LogoUri" class="text-danger"></span>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Input.Enabled" class="form-check-input" />
                                    <label asp-for="Input.Enabled" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Authentication Settings -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="fas fa-shield-alt"></i> Authentication Settings</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-check mb-3">
                                    <input asp-for="Input.RequirePkce" class="form-check-input" />
                                    <label asp-for="Input.RequirePkce" class="form-check-label"></label>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Input.RequireClientSecret" class="form-check-input" />
                                    <label asp-for="Input.RequireClientSecret" class="form-check-label"></label>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Input.RequireConsent" class="form-check-input" />
                                    <label asp-for="Input.RequireConsent" class="form-check-label"></label>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Input.AllowOfflineAccess" class="form-check-input" />
                                    <label asp-for="Input.AllowOfflineAccess" class="form-check-label"></label>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Input.AlwaysIncludeUserClaimsInIdToken" class="form-check-input" />
                                    <label asp-for="Input.AlwaysIncludeUserClaimsInIdToken" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Grant Types -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-key"></i> Allowed Grant Types</h5>
                    </div>
                    <div class="card-body">
                        <div id="grant-types-container">
                            @for (int i = 0; i < Model.Input.AllowedGrantTypes.Count; i++)
                            {
                                <div class="input-group mb-2">
                                    <select asp-for="Input.AllowedGrantTypes[i]" class="form-select">
                                        <option value="">Select Grant Type</option>
                                        @foreach (var grantType in Model.Input.AvailableGrantTypes)
                                        {
                                            <option value="@grantType" selected="@(Model.Input.AllowedGrantTypes[i] == grantType)">@grantType</option>
                                        }
                                    </select>
                                    <button type="submit" asp-page-handler="RemoveGrantType" asp-route-index="@i" class="btn btn-outline-danger">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            }
                        </div>
                        <button type="submit" asp-page-handler="AddGrantType" class="btn btn-outline-primary">
                            <i class="fas fa-plus"></i> Add Grant Type
                        </button>
                    </div>
                </div>

                <!-- URIs -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="fas fa-link"></i> Redirect URIs</h5>
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Input.RedirectUris.Count; i++)
                                {
                                    <div class="input-group mb-2">
                                        <input asp-for="Input.RedirectUris[i]" class="form-control" placeholder="https://example.com/callback" />
                                        <button type="submit" asp-page-handler="RemoveRedirectUri" asp-route-index="@i" class="btn btn-outline-danger">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                }
                                <button type="submit" asp-page-handler="AddRedirectUri" class="btn btn-outline-primary">
                                    <i class="fas fa-plus"></i> Add Redirect URI
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="fas fa-sign-out-alt"></i> Post Logout Redirect URIs</h5>
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.Input.PostLogoutRedirectUris.Count; i++)
                                {
                                    <div class="input-group mb-2">
                                        <input asp-for="Input.PostLogoutRedirectUris[i]" class="form-control" placeholder="https://example.com/logout" />
                                        <button type="submit" asp-page-handler="RemovePostLogoutRedirectUri" asp-route-index="@i" class="btn btn-outline-danger">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                }
                                <button type="submit" asp-page-handler="AddPostLogoutRedirectUri" class="btn btn-outline-primary">
                                    <i class="fas fa-plus"></i> Add Post Logout Redirect URI
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Logout URIs -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="fas fa-globe"></i> Logout URIs</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Input.FrontChannelLogoutUri" class="form-label"></label>
                                    <input asp-for="Input.FrontChannelLogoutUri" class="form-control" />
                                    <span asp-validation-for="Input.FrontChannelLogoutUri" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.BackChannelLogoutUri" class="form-label"></label>
                                    <input asp-for="Input.BackChannelLogoutUri" class="form-control" />
                                    <span asp-validation-for="Input.BackChannelLogoutUri" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Token Settings -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="fas fa-clock"></i> Token Settings</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Input.AccessTokenLifetime" class="form-label"></label>
                                    <input asp-for="Input.AccessTokenLifetime" class="form-control" type="number" />
                                    <span asp-validation-for="Input.AccessTokenLifetime" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.IdentityTokenLifetime" class="form-label"></label>
                                    <input asp-for="Input.IdentityTokenLifetime" class="form-control" type="number" />
                                    <span asp-validation-for="Input.IdentityTokenLifetime" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.SlidingRefreshTokenLifetime" class="form-label"></label>
                                    <input asp-for="Input.SlidingRefreshTokenLifetime" class="form-control" type="number" />
                                    <span asp-validation-for="Input.SlidingRefreshTokenLifetime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Allowed Scopes -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-list"></i> Allowed Scopes</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var scope in Model.Input.AvailableScopes)
                            {
                                <div class="col-md-3 mb-2">
                                    <div class="form-check">
                                        <input type="checkbox" name="Input.AllowedScopes" value="@scope" 
                                               checked="@Model.Input.AllowedScopes.Contains(scope)" 
                                               class="form-check-input" id="scope_@scope" />
                                        <label class="form-check-label" for="scope_@scope">@scope</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Client Secrets -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-lock"></i> Add New Secret</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.NewSecret" class="form-label"></label>
                                    <input asp-for="Input.NewSecret" class="form-control" />
                                    <span asp-validation-for="Input.NewSecret" class="text-danger"></span>
                                    <div class="form-text">Leave empty to keep existing secrets unchanged.</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.NewSecretDescription" class="form-label"></label>
                                    <input asp-for="Input.NewSecretDescription" class="form-control" />
                                    <span asp-validation-for="Input.NewSecretDescription" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between">
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Home
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
